---
import { Picture } from "astro-imagetools/components";
import { CollectionEntry } from "astro:content";

interface Props {
  project:CollectionEntry<"project">
}

const {title, description,coverImg, source, live } = Astro.props.project.data
const url = "/project/" + Astro.props.project.slug + "/";
